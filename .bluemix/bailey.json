{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/bailey.title"
    },
    "description": {
        "$ref": "#/messages/bailey.description"
    },
    "longDescription": {
        "$ref": "#/messages/bailey.longDescription"
    },
    "type": "object",
    "properties": {
        "baileyUrl": {
            "description": {
                "$ref": "#/messages/bailey.urlDescription"
            },
            "type": "string"
        },
        "baileyProject": {
            "description": {
                "$ref": "#/messages/bailey.projectDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "baileyUrl",
        "baileyProject"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Bailey URL",
            "key": "baileyUrl"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Bailey Project",
            "key": "baileyProject"
        }
    ]
}